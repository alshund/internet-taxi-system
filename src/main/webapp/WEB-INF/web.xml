<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>DriverSignUp</servlet-name>
    <display-name>DriverSignUp</display-name>
    <jsp-file>/WEB-INF/jspPages/DriverSignUp.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>DriverSignUp</servlet-name>
    <url-pattern>/DriverSignUp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RiderSignUp</servlet-name>
    <display-name>RiderSignUp</display-name>
    <jsp-file>/WEB-INF/jspPages/RiderSignUp.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>RiderSignUp</servlet-name>
    <url-pattern>/RiderSignUp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>RiderProfile</servlet-name>
    <display-name>RiderProfile</display-name>
    <jsp-file>/WEB-INF/jspPages/RiderProfile.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>RiderProfile</servlet-name>
    <url-pattern>/RiderProfile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FrontController</servlet-name>
    <display-name>FrontController</display-name>
    <servlet-class>by.tr.epam.controller.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/FrontController</url-pattern>
  </servlet-mapping>

</web-app>
